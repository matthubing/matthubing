<script>
function init_project_slideshow() {
  $('.project .image').hide();
  $('.project .caption').hide();
  $('.project .image:first-child').show().addClass('fadeIn selected');
  $('.project .caption:nth-child(2)').show().addClass('fadeIn selected');
  $('.project .project-thumb-control.left').hide();
  $('.project .project-thumb-control.right').on({
    click: function(e) {
      e.preventDefault();
      //var i = $(this).indexof.img in figure
      //i = i + 1;

    }
  });
}

$(document).ready(function() {

  var project = $('.project')
  init_project_slideshow(project);

  $('#wrapper').show().addClass('fadeIn');
}); // document.ready
</script>

<% end %>