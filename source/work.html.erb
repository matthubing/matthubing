<% current_page.data.projects.each do |project| %>
<div class="project" id="<%= project.name %>">
  <h4 class="title"><%= project.title %></h4>
  <p class="description"><%= project.description %></p>
  <div class="figurecontainer">
    <a class="project-thumb-control right" href="#next">Next</a>
    <figure>
      <% project.photos.each do |photo| %>
        <img class="image" src="<%= photo.thumb %>" alt="<%= photo.alt %>">
        <figcaption class="caption"><%= photo.description %></figcaption>
      <% end %>
    </figure>
    <a class="project-thumb-control left" href="#prev">Previous</a>
  </div>
</div>
<% end %>

